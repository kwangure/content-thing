{
	"name": "content-thing",
	"version": "0.0.11",
	"description": "A CMS for SvelteKit apps",
	"scripts": {
		"build": "wireit",
		"pre-commit": "wireit",
		"publint": "wireit",
		"release": "wireit",
		"test": "wireit"
	},
	"wireit": {
		"build": {
			"dependencies": [
				"build:config",
				"build:lib"
			]
		},
		"build:lib": {
			"command": "tsc --build",
			"files": [
				"src/**/*.{js,ts}",
				"tests/**/*.{js,ts}",
				"tsconfig.json",
				"../../config/tsconfig.base.json"
			],
			"dependencies": [
				"../internal-utils:build",
				"../remark-attributes:build",
				"../remark-rich-attributes:build",
				"../remark-toc:build",
				"../remark-variables:build",
				"../remark-yaml-parse:build"
			],
			"output": [
				"dist"
			]
		},
		"build:config": {
			"command": "tsx ./src/config/json-schema.ts",
			"dependencies": [
				"../internal-utils:build"
			],
			"files": [
				"./src/config/*.ts"
			],
			"output": [
				"./config/schema.json"
			]
		},
		"publint": {
			"command": "publint",
			"dependencies": [
				"build"
			],
			"files": [
				"src/**",
				"dist/**",
				"package.json"
			],
			"output": []
		},
		"pre-commit": {
			"dependencies": [
				"build",
				"publint",
				"test"
			]
		},
		"release": {
			"dependencies": [
				"build",
				"publint",
				"test"
			]
		},
		"test": {
			"command": "tsx --test --test-reporter spec",
			"files": [
				"src/**/*.{js,ts}",
				"tests/**/*.{js,ts}"
			],
			"output": []
		}
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"default": "./dist/index.js"
		},
		"./config": {
			"default": "./config/schema.json"
		},
		"./db": {
			"types": "./dist/db/index.d.ts",
			"default": "./dist/db/index.js"
		},
		"./better-sqlite3": {
			"types": "./dist/packages/better-sqlite3/index.d.ts",
			"default": "./dist/packages/better-sqlite3/index.js"
		},
		"./drizzle-orm": {
			"types": "./dist/packages/drizzle-orm/index.d.ts",
			"default": "./dist/packages/drizzle-orm/index.js"
		},
		"./drizzle-orm/better-sqlite3": {
			"types": "./dist/packages/drizzle-orm/better-sqlite3.d.ts",
			"default": "./dist/packages/drizzle-orm/better-sqlite3.js"
		},
		"./drizzle-orm/sqlite-core": {
			"types": "./dist/packages/drizzle-orm/sqlite.d.ts",
			"default": "./dist/packages/drizzle-orm/sqlite.js"
		},
		"./drizzle-zod": {
			"types": "./dist/packages/drizzle-zod.d.ts",
			"default": "./dist/packages/drizzle-zod.js"
		},
		"./mdast": {
			"types": "./dist/packages/mdast.d.ts",
			"default": "./dist/packages/mdast.js"
		}
	},
	"dependencies": {
		"@content-thing/internal-utils": "^0.0.0",
		"@content-thing/remark-attributes": "^0.0.2",
		"@content-thing/remark-rich-attributes": "^0.0.2",
		"@content-thing/remark-toc": "^0.0.1",
		"@content-thing/remark-variables": "^0.0.2",
		"@content-thing/remark-yaml-parse": "^0.0.1",
		"@signalapp/better-sqlite3": "^8.6.0",
		"@types/mdast": "^4.0.1",
		"better-sqlite3": "^8.5.2",
		"chokidar": "^3.5.3",
		"drizzle-orm": "^0.28.5",
		"drizzle-zod": "^0.5.1",
		"hine": "^0.0.21",
		"js-yaml": "^4.1.0",
		"remark-frontmatter": "^5.0.0",
		"remark-parse": "^11.0.0",
		"remark-stringify": "^11.0.0",
		"unified": "^11.0.3",
		"zod": "^3.22.2"
	},
	"devDependencies": {
		"@sveltejs/kit": "^2.0.0",
		"@types/better-sqlite3": "^7.6.4",
		"@types/js-yaml": "^4.0.5",
		"@types/node": "^20.4.10",
		"publint": "^0.2.2",
		"tsx": "^4.7.0",
		"typescript": "^5.1.6",
		"vite": "^5.0.9",
		"zod-to-json-schema": "^3.21.4"
	},
	"peerDependencies": {
		"@sveltejs/kit": "^2.0.0"
	},
	"files": [
		"dist",
		"config",
		"!**/*.test.*",
		"!**/*.spec.*"
	],
	"license": "MIT",
	"type": "module"
}
