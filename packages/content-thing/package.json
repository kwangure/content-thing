{
	"name": "content-thing",
	"version": "0.0.37",
	"description": "A basic CMS for SvelteKit apps",
	"scripts": {
		"build": "wireit",
		"dev": "wireit",
		"pre-commit": "wireit",
		"publint": "wireit",
		"test": "wireit"
	},
	"wireit": {
		"build": {
			"command": "tsc --build",
			"files": [
				"src/**/*.{js,ts}",
				"tsconfig.json",
				"../../config/tsconfig.base.json"
			],
			"output": [
				"types"
			]
		},
		"dev": {
			"command": "tsc --build --watch",
			"service": true,
			"files": []
		},
		"publint": {
			"command": "publint",
			"dependencies": [
				"build"
			],
			"files": [
				"src/**",
				"types/**",
				"package.json"
			],
			"output": []
		},
		"pre-commit": {
			"dependencies": [
				"build",
				"publint",
				"test"
			]
		},
		"release": {
			"dependencies": [
				"build",
				"publint",
				"test"
			]
		},
		"test": {
			"command": "vitest run",
			"files": [
				"src/**/*.{js,ts}",
				"tests/**/*.{js,ts}"
			],
			"output": []
		}
	},
	"exports": {
		".": {
			"types": "./dist/node.d.ts",
			"browser": "./dist/browser.js",
			"default": "./dist/node.js"
		},
		"./mdast": {
			"types": "./dist/plugins/markdown/mdast.d.ts",
			"default": "./dist/plugins/markdown/mdast.js"
		},
		"./imports": {
			"types": "./dist/imports.d.ts",
			"default": "./dist/imports.js"
		}
	},
	"files": [
		"dist",
		"!**/*.test.*",
		"!**/*.spec.*"
	],
	"devDependencies": {
		"@sveltejs/kit": "^2.0.0",
		"@types/node": "^20.14.9",
		"publint": "^0.2.6",
		"typescript": "^5.4.5",
		"vite": "^5.3.4",
		"vitest": "^1.6.0"
	},
	"type": "module",
	"dependencies": {
		"@content-thing/internal-utils": "^0.0.3",
		"@content-thing/line-range": "^0.0.0",
		"@content-thing/remark-attributes": "^0.0.3",
		"@content-thing/syntax-highlighter": "^0.0.1",
		"@content-thing/vite-plugin-syntax-highlighter": "^0.0.1",
		"@types/mdast": "^4.0.1",
		"mdast-util-to-markdown": "^2.1.0",
		"remark-parse": "^11.0.0",
		"unified": "^11.0.3",
		"unist-util-visit": "^5.0.0",
		"valibot": "^0.35.0",
		"yaml": "^2.4.5"
	}
}
